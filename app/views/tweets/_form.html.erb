<%= form_with model: @tweet, local: true do |f|%>
  <div class="field">
    <%= f.label :location_title, "場所の名称" %><br />
    <%= f.text_field :location_title, id:"location_title" %>
  </div>

  <div class="field">
    <%= f.label :prefectures_id, "都道府県" %><br />
    <%= f.collection_select(:prefectures_id, Prefectures.all, :id, :name, {}, { class:"select-box", id:"location_prefectures"}) %>
  </div>

  <div class="field">
    <%= f.label :text, "口コミ" %><br />
    <%= f.text_area :text, id:"location_text" %>
  </div>

  <div class="field">
    <%= f.label :image, "キャンプ場の画像" %><br />
    <%= f.file_field :image, id:"location_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>